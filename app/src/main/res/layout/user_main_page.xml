<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_main_page_avatar"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="91dp"
        android:src="@mipmap/human_avatar"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/user_main_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_main_page_avatar"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/user_main_page_avatar"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/user_main_page_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_main_page_rating"
        android:layout_alignStart="@+id/user_main_page_name"
        android:layout_marginBottom="34dp"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/user_main_page_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_main_page_avatar"
        android:layout_alignStart="@+id/user_main_page_age"
        android:text="TextView"
        android:textColor="@android:color/black" />

</RelativeLayout>